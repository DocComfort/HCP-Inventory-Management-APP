# Backend Environment Variables (.env)
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3001

# CORS Configuration (comma-separated list of allowed origins)
# Development: Include localhost URLs
# Production: Include your Netlify URL(s)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080

# Supabase Configuration (REQUIRED)
SUPABASE_URL=https://jjixcnrvnbrkiyaxatxm.databasepad.com
SUPABASE_SERVICE_KEY=your_service_key_here

# Housecall Pro OAuth (REQUIRED for HCP integration)
HCP_CLIENT_ID=your_hcp_client_id
HCP_CLIENT_SECRET=your_hcp_client_secret
HCP_REDIRECT_URI=http://localhost:3001/oauth/hcp/callback

# QuickBooks Online OAuth2 (OPTIONAL)
QBO_CLIENT_ID=your_qbo_client_id
QBO_CLIENT_SECRET=your_qbo_client_secret
QBO_REDIRECT_URI=http://localhost:3001/oauth/qbo/callback
QBO_ENVIRONMENT=sandbox

# QuickBooks Desktop Web Connector (OPTIONAL)
QBWC_USERNAME=admin
QBWC_PASSWORD=your_secure_password
QBD_COMPANY_FILE=C:\\Path\\To\\Your\\QuickBooks\\File.QBW

# Security (OPTIONAL but HIGHLY RECOMMENDED for production)
# Generate with: openssl rand -base64 32
# Must match INTEGRATIONS_API_KEY in Netlify environment variables
INTEGRATIONS_API_KEY=your-secure-random-key-min-32-characters-long

# Webhook Security (OPTIONAL)
WEBHOOK_SECRET_HCP=your_hcp_webhook_secret
WEBHOOK_SECRET_QBO=your_qbo_webhook_secret

# Optional URLs (for reference)
APP_URL=http://localhost:8080
FRONTEND_URL=http://localhost:8080
NETLIFY_URL=
